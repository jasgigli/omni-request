# Auto detect text files and perform LF normalization
* text=auto eol=lf

# Source code
*.js    text eol=lf
*.jsx   text eol=lf
*.ts    text eol=lf
*.tsx   text eol=lf
*.json  text eol=lf
*.css   text eol=lf
*.scss  text eol=lf
*.html  text eol=lf
*.md    text eol=lf
*.yml   text eol=lf
*.yaml  text eol=lf

# Documentation
*.txt   text eol=lf
*.pdf   binary

# Graphics
*.png   binary
*.jpg   binary
*.jpeg  binary
*.gif   binary
*.ico   binary
*.svg   text eol=lf
*.webp  binary

# Scripts
*.sh    text eol=lf
*.bat   text eol=crlf
*.cmd   text eol=crlf
*.ps1   text eol=crlf

# RC files
.*rc    text eol=lf
*.yml   text eol=lf
*.yaml  text eol=lf
*.json  text eol=lf

# Git config
.gitattributes text eol=lf
.gitignore     text eol=lf
.gitconfig     text eol=lf

# Exclude files from exporting
.gitattributes export-ignore
.gitignore     export-ignore
.github        export-ignore

# Mark generated files
dist/* linguist-generated=true
